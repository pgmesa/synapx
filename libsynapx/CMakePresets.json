{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_INSTALLED_DIR": "${sourceDir}/vcpkg_installed/"
      }
    },
    {
      "name": "base-debug",
      "inherits": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "base-release",
      "inherits": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-base",
      "inherits": "base",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_CXX_COMPILER": "cl"
      }
    },
    {
      "name": "linux-base",
      "inherits": "base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "windows-debug",
      "inherits": ["windows-base", "base-debug"],
	    "hidden": true,
      "displayName": "Windows Debug"
    },
    {
      "name": "windows-release",
      "inherits": ["windows-base", "base-release"],
	    "hidden": true,
      "displayName": "Windows Release"
    },
    {
      "name": "linux-debug",
      "inherits": ["linux-base", "base-debug"],
	    "hidden": true,
      "displayName": "Linux Debug"
    },
    {
      "name": "linux-release",
      "inherits": ["linux-base", "base-release"],
	    "hidden": true,
      "displayName": "Linux Release"
    }
  ],
  "buildPresets": [
    {
      "name": "windows-debug",
	    "hidden": true,
      "configurePreset": "windows-debug",
      "displayName": "Windows Debug Build"
    },
    {
      "name": "windows-release",
	    "hidden": true,
      "configurePreset": "windows-release",
      "displayName": "Windows Release Build"
    },
    {
      "name": "linux-debug",
	    "hidden": true,
      "configurePreset": "linux-debug",
      "displayName": "Linux Debug Build"
    },
    {
      "name": "linux-release",
	    "hidden": true,
      "configurePreset": "linux-release",
      "displayName": "Linux Release Build"
    }
  ]
}